@model HairCareShop.Core.Entities.User

@{
    ViewData["Title"] = "Cập nhật Khách Hàng";
}

<div class="container d-flex justify-content-center">
    <div class="card shadow-sm border-0 col-md-8">
        <div class="card-header bg-primary text-white fw-bold py-3">
            <i class="bi bi-pencil-square me-2"></i>Cập nhật thông tin: @Model.FullName
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Email (Không thể sửa)</label>
                    <input asp-for="Email" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Địa chỉ giao hàng</label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-primary fw-bold px-4">Lưu Thay Đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}