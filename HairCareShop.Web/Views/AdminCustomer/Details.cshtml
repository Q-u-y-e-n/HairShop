@model HairCareShop.Core.Entities.User

@{
    ViewData["Title"] = "Hồ sơ: " + Model.FullName;
    decimal totalSpent = Model.Orders?.Sum(o => o.TotalAmount) ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
        <h3 class="text-primary fw-bold m-0">Hồ sơ khách hàng</h3>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center pt-5">
                    <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center mx-auto mb-3 shadow"
                        style="width: 100px; height: 100px; font-size: 2.5rem; fw-bold">
                        @Model.FullName.Substring(0, 1).ToUpper()
                    </div>
                    <h4 class="fw-bold mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-3">@Model.Email</p>

                    <div class="d-flex justify-content-center gap-2 mb-4">
                        <span class="badge bg-light text-dark border p-2">
                            <i class="bi bi-cart-check me-1"></i> @Model.Orders?.Count Đơn hàng
                        </span>
                        <span class="badge bg-success-subtle text-success border border-success p-2">
                            <i class="bi bi-currency-dollar me-1"></i> @totalSpent.ToString("N0") đ
                        </span>
                    </div>

                    <ul class="list-group list-group-flush text-start">
                        <li class="list-group-item">
                            <i class="bi bi-telephone me-2 text-primary"></i>
                            @(Model.PhoneNumber ?? "Chưa cập nhật")
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-geo-alt me-2 text-primary"></i>
                            @(Model.Address ?? "Chưa cập nhật địa chỉ")
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-calendar3 me-2 text-primary"></i>
                            Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy")
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 fw-bold text-primary">
                    <i class="bi bi-clock-history me-2"></i>Lịch sử đơn hàng
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-muted small">
                                <tr>
                                    <th class="ps-4">Mã Đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Tổng tiền</th>
                                    <th class="text-center">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders != null && Model.Orders.Any())
                                {
                                    foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">#@order.Id</td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <ul class="list-unstyled mb-0 small text-muted">
                                                    @foreach (var d in order.OrderDetails)
                                                    {
                                                        <li>- @d.Product?.Name <span class="fw-bold">x@(d.Quantity)</span></li>
                                                    }
                                                </ul>
                                            </td>
                                            <td class="text-end fw-bold text-success">@order.TotalAmount.ToString("N0")</td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@order.Status</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="bi bi-cart-x display-4 opacity-25"></i>
                                            <p class="mt-2">Khách hàng này chưa có đơn hàng nào.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>