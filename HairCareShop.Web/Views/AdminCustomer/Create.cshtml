@model HairCareShop.Core.Entities.User

@{
    ViewData["Title"] = "Thêm Khách Hàng";
}

<div class="container d-flex justify-content-center">
    <div class="card shadow-sm border-0 col-md-8">
        <div class="card-header bg-success text-white fw-bold py-3">
            <i class="bi bi-person-plus me-2"></i>Thêm Khách Hàng Mới
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                    <input asp-for="FullName" class="form-control" required placeholder="Nhập họ tên khách hàng" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Email (Tài khoản) <span class="text-danger">*</span></label>
                        <input asp-for="Email" type="email" class="form-control" required
                            placeholder="example@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="text-muted">Mật khẩu mặc định sẽ là: <strong>123456</strong></small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxx" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Địa chỉ giao hàng</label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-success fw-bold px-4">Lưu Khách Hàng</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}