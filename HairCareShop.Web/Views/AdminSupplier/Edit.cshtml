@model HairCareShop.Core.Entities.Supplier

<div class="card shadow-sm" style="max-width: 600px; margin: 0 auto;">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Chỉnh sửa Nhà cung cấp</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Tên nhà cung cấp (*)</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" value="cần_thêm_trường_email_vào_entity" disabled />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">Hủy</a>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
</div>