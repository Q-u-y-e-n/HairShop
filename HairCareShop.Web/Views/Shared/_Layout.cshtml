<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị HairCare</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #2c3e50;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 100;
            transition: all 0.3s;
        }

        .main-content {
            margin-left: 260px;
            width: calc(100% - 260px);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 20px;
            background-color: #1a252f;
            border-bottom: 1px solid #34495e;
        }

        .sidebar a {
            color: #b0b8c5;
            text-decoration: none;
            padding: 12px 20px;
            display: block;
            font-size: 0.95rem;
            border-left: 3px solid transparent;
        }

        .sidebar a:hover {
            background-color: #34495e;
            color: #fff;
        }

        .sidebar a.active {
            background-color: #34495e;
            color: #fff;
            border-left: 3px solid #3498db;
        }

        .sidebar i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .nav-header {
            padding: 15px 20px 5px;
            color: #5f758a;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .top-navbar {
            background: #fff;
            padding: 15px 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>

<body>

    <div class="sidebar d-flex flex-column text-white">
        <div class="sidebar-header d-flex align-items-center">
            <i class="bi bi-scissors fs-3 text-warning me-2"></i>
            <span class="fs-5 fw-bold text-white">HairCare Admin</span>
        </div>

        <div class="overflow-auto" style="flex: 1;">
            <ul class="nav nav-pills flex-column mb-auto pb-5">
                <li class="nav-item mt-2">
                    <a asp-controller="Home" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>

                <div class="nav-header">Sản phẩm & Kho</div>
                <li>
                    <a asp-controller="AdminProduct" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminProduct" ? "active" : "")">
                        <i class="bi bi-box-seam"></i> Quản lý sản phẩm
                    </a>
                </li>
                <li>
                    <a asp-controller="AdminSupplier" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminSupplier" ? "active" : "")">
                        <i class="bi bi-building"></i> Nhà cung cấp
                    </a>
                </li>

                <div class="nav-header">Bán hàng</div>
                <li>
                    <a asp-controller="AdminOrder" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminOrder" ? "active" : "")">
                        <i class="bi bi-cart-check"></i> Quản lý Đơn hàng
                    </a>
                </li>
                <li>
                    <a asp-controller="AdminReview" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminReview" ? "active" : "")">
                        <i class="bi bi-star-half"></i> Đánh giá & Review
                    </a>
                </li>

                <div class="nav-header">Người dùng</div>
                <li>
                    <a asp-controller="AdminUser" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminUser" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-people"></i> Khách hàng
                    </a>
                </li>
                <li>
                    <a asp-controller="AdminUser" asp-action="Shippers"
                        class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Shippers" ? "active" : "")">
                        <i class="bi bi-truck"></i> Quản lý Shipper
                    </a>
                </li>

                <div class="nav-header">Thống kê</div>
                <li>
                    <a asp-controller="AdminReport" asp-action="Index"
                        class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminReport" ? "active" : "")">
                        <i class="bi bi-bar-chart-line"></i> Báo cáo doanh thu
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <nav class="top-navbar d-flex justify-content-between align-items-center bg-white border-bottom">
            <h5 class="m-0 text-dark">Quản trị hệ thống</h5>
            <div class="d-flex align-items-center">
                <span class="me-3 text-muted">Xin chào, Admin</span>
                <a href="#" class="btn btn-outline-danger btn-sm">Đăng xuất</a>
            </div>
        </nav>
        <div class="p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>