@model HairCareShop.Core.Entities.Order
@using HairCareShop.Core.Enums @{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary fw-bold m-0">Chi tiết đơn hàng #@Model.Id</h3>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 fw-bold">
                    <i class="bi bi-box-seam me-2"></i>Sản phẩm mua
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light small">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Product?.Name</div>
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("N0") đ</td>
                                    <td class="text-end fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0")) đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold text-uppercase">Tổng thanh toán:</td>
                                <td class="text-end fw-bold text-danger fs-5">@Model.TotalAmount.ToString("N0") đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <label class="small text-muted fw-bold text-uppercase mb-2">Trạng thái đơn hàng</label>
                    <div>
                        @{
                            string statusClass = "";
                            string statusText = "";

                            switch (Model.Status)
                            {
                                case OrderStatus.Pending:
                                    statusClass = "bg-warning text-dark";
                                    statusText = "Chờ xác nhận";
                                    break;
                                case OrderStatus.Confirmed:
                                    statusClass = "bg-primary";
                                    statusText = "Đã xác nhận";
                                    break;
                                case OrderStatus.Shipping:
                                    statusClass = "bg-info text-dark";
                                    statusText = "Đang giao hàng";
                                    break;
                                case OrderStatus.Completed:
                                    statusClass = "bg-success";
                                    statusText = "Giao thành công";
                                    break;
                                case OrderStatus.Cancelled:
                                    statusClass = "bg-danger";
                                    statusText = "Đã hủy";
                                    break;
                            }
                        }
                        <span class="badge @statusClass fs-6 px-3 py-2 w-100">@statusText</span>
                    </div>

                    @if (Model.Status == OrderStatus.Shipping || Model.Status == OrderStatus.Completed)
                    {
                        <div class="mt-3 pt-3 border-top">
                            <label class="small text-muted fw-bold">Shipper phụ trách</label>
                            <div class="d-flex align-items-center mt-2">
                                <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center me-2"
                                    style="width:35px;height:35px;">
                                    <i class="bi bi-truck"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">@(Model.Shipper?.FullName ?? "Chưa phân công")</div>
                                    <small class="text-muted">@(Model.Shipper?.PhoneNumber ?? "")</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 fw-bold">
                    <i class="bi bi-person-circle me-2"></i>Thông tin khách hàng
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="small text-muted">Người nhận</label>
                        <div class="fw-bold">@Model.User?.FullName</div>
                    </div>
                    <div class="mb-3">
                        <label class="small text-muted">Số điện thoại</label>
                        <div>@Model.User?.PhoneNumber</div>
                    </div>
                    <div class="mb-3">
                        <label class="small text-muted">Địa chỉ giao hàng</label>
                        <div>@(string.IsNullOrEmpty(Model.ShippingAddress) ? Model.User?.Address :
                                                        Model.ShippingAddress)</div>
                    </div>
                    <div class="mb-0">
                        <label class="small text-muted">Ngày đặt hàng</label>
                        <div>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>