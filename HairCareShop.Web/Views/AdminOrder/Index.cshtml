@model IEnumerable<HairCareShop.Core.Entities.Order>
@using HairCareShop.Core.Enums

@{
    ViewData["Title"] = "Qu·∫£n l√Ω ƒê∆°n h√†ng";
    var shippers = ViewBag.Shippers as List<HairCareShop.Core.Entities.User>;
}

<div class="container-fluid">
    <h3 class="text-primary fw-bold mb-4">üì¶ Qu·∫£n l√Ω ƒê∆°n h√†ng</h3>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4">M√£ ƒê∆°n</th>
                        <th>Kh√°ch h√†ng</th>
                        <th>Ng√†y ƒë·∫∑t</th>
                        <th>T·ªïng ti·ªÅn</th>
                        <th>Shipper</th>
                        <th>Tr·∫°ng th√°i</th>
                        <th class="text-center">H√†nh ƒë·ªông</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@item.Id</td>
                            <td>
                                <div>@item.User?.FullName</div>
                                <small class="text-muted">@item.User?.PhoneNumber</small>
                            </td>
                            <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="fw-bold text-success">@item.TotalAmount.ToString("N0") ƒë</td>
                            <td>
                                <span id="shipper-name-@item.Id" class="fw-bold text-info">
                                    @(item.Shipper?.FullName ?? "---")
                                </span>
                                @if (item.Status != OrderStatus.Completed && item.Status != OrderStatus.Cancelled)
                                {
                                    <button class="btn btn-sm btn-link p-0 ms-2" onclick="openAssignModal(@item.Id)"
                                        title="ƒê·ªïi shipper">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                }
                            </td>
                            <td>
                                @{
                                    string badgeClass = item.Status switch
                                    {
                                        OrderStatus.Pending => "bg-warning text-dark",
                                        OrderStatus.Confirmed => "bg-primary",
                                        OrderStatus.Shipping => "bg-info text-dark",
                                        OrderStatus.Completed => "bg-success",
                                        OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span id="status-badge-@item.Id" class="badge @badgeClass">@item.Status</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @if (item.Status == OrderStatus.Pending)
                                {
                                    <button id="btn-confirm-@item.Id" class="btn btn-sm btn-success ms-1"
                                        onclick="confirmOrder(@item.Id)">
                                        <i class="bi bi-check-lg"></i> Duy·ªát
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="assignModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ph√¢n c√¥ng Shipper</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="assignOrderId" />
                <label class="form-label">Ch·ªçn Shipper:</label>
                <select id="selectShipper" class="form-select">
                    <option value="">-- Ch·ªçn Shipper --</option>
                    @if (shippers != null)
                    {
                        foreach (var s in shippers)
                        {
                            <option value="@s.Id">@s.FullName - @s.PhoneNumber</option>
                        }
                    }
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ƒê√≥ng</button>
                <button type="button" class="btn btn-primary" onclick="submitAssign()">L∆∞u Ph√¢n c√¥ng</button>
            </div>
        </div>
    </div>
</div>

<script>
    // 1. X√°c nh·∫≠n ƒë∆°n h√†ng
    function confirmOrder(id) {
        if (!confirm('X√°c nh·∫≠n duy·ªát ƒë∆°n h√†ng n√†y?')) return;
        fetch('/AdminOrder/ConfirmOrder?id=' + id, { method: 'POST' })
            .then(r => r.json()).then(d => {
                if (d.success) {
                    // C·∫≠p nh·∫≠t giao di·ªán t·∫°i ch·ªó
                    document.getElementById('status-badge-' + id).className = "badge bg-primary";
                    document.getElementById('status-badge-' + id).innerText = "Confirmed";
                    document.getElementById('btn-confirm-' + id).remove(); // ·∫®n n√∫t duy·ªát
                } else alert(d.message);
            });
    }

    // 2. M·ªü Modal ph√¢n c√¥ng
    var assignModal;
    function openAssignModal(id) {
        document.getElementById('assignOrderId').value = id;
        assignModal = new bootstrap.Modal(document.getElementById('assignModal'));
        assignModal.show();
    }

    // 3. G·ª≠i ph√¢n c√¥ng
    function submitAssign() {
        let orderId = document.getElementById('assignOrderId').value;
        let shipperId = document.getElementById('selectShipper').value;

        if (!shipperId) { alert("Vui l√≤ng ch·ªçn Shipper!"); return; }

        let fd = new FormData();
        fd.append('orderId', orderId);
        fd.append('shipperId', shipperId);

        fetch('/AdminOrder/AssignShipper', { method: 'POST', body: fd })
            .then(r => r.json()).then(d => {
                if (d.success) {
                    document.getElementById('shipper-name-' + orderId).innerText = d.shipperName;

                    // N·∫øu ƒë∆°n ƒëang Pending th√¨ ƒë·ªïi lu√¥n th√†nh Confirmed tr√™n giao di·ªán
                    let badge = document.getElementById('status-badge-' + orderId);
                    if (badge.innerText === "Pending") {
                        badge.className = "badge bg-primary";
                        badge.innerText = "Confirmed";
                        let btnConfirm = document.getElementById('btn-confirm-' + orderId);
                        if (btnConfirm) btnConfirm.remove();
                    }

                    assignModal.hide();
                } else alert(d.message);
            });
    }
</script>