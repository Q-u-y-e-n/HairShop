@model HairCareShop.Web.Models.ShipperDetailViewModel

@{ ViewData["Title"] = "Hồ sơ Shipper: " + Model.Shipper.FullName; }

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
        <h4 class="fw-bold m-0 text-primary">Hồ sơ hoạt động Shipper</h4>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center pt-4">
                    <div class="rounded-circle bg-warning text-white d-flex justify-content-center align-items-center mx-auto mb-3 shadow" 
                         style="width: 80px; height: 80px; font-size: 2rem;">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h5 class="fw-bold">@Model.Shipper.FullName</h5>
                    <p class="text-muted">@Model.Shipper.PhoneNumber</p>
                    <hr />
                    
                    <div class="row text-center mt-4">
                        <div class="col-6 border-end">
                            <h3 class="fw-bold text-success">@Model.TotalCompletedOrders</h3>
                            <small class="text-muted text-uppercase">Tổng chuyến</small>
                        </div>
                        <div class="col-6">
                            <h3 class="fw-bold text-primary">@Model.TotalActiveMonths</h3>
                            <small class="text-muted text-uppercase">Tháng hoạt động</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold m-0"><i class="bi bi-calendar3 me-2"></i>Lịch sử chạy theo tháng</h6>
                    
                    <form asp-action="Details" method="get" class="d-flex gap-2">
                        <input type="hidden" name="id" value="@Model.Shipper.Id" />
                        <select name="month" class="form-select form-select-sm" style="width: 100px;">
                            <option value="">Tháng</option>
                            @for(int i=1;i<=12;i++){ <option value="@i" selected="@(Model.FilterMonth==i)">Tháng @i</option> }
                        </select>
                        <select name="year" class="form-select form-select-sm" style="width: 100px;">
                            <option value="">Năm</option>
                            @for(int i=2023;i<=2030;i++){ <option value="@i" selected="@(Model.FilterYear==i)">@i</option> }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Lọc</button>
                    </form>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 text-center">
                        <thead class="bg-light text-muted small">
                            <tr>
                                <th>Thời gian</th>
                                <th>Số chuyến thành công</th>
                                <th>Tiền thu hộ (COD)</th>
                                <th>Hiệu suất</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model.MonthlyStats.Any())
                            {
                                foreach(var stat in Model.MonthlyStats)
                                {
                                    <tr>
                                        <td class="fw-bold text-primary">Tháng @stat.Month / @stat.Year</td>
                                        <td>
                                            <span class="badge bg-success fs-6">@stat.OrderCount</span>
                                        </td>
                                        <td class="text-success fw-bold">
                                            @stat.TotalRevenueCollected.ToString("N0") đ
                                        </td>
                                        <td>
                                            @if(stat.OrderCount >= 50) { <span class="text-success"><i class="bi bi-star-fill"></i> Tốt</span> }
                                            else { <span class="text-muted">Bình thường</span> }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="py-4 text-muted">Không có dữ liệu chạy xe trong thời gian này.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>