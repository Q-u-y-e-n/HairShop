@model HairCareShop.Core.Entities.User

@{
    ViewData["Title"] = "Chỉnh sửa Shipper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h3 class="text-primary fw-bold mb-4">✏️ Chỉnh sửa thông tin Shipper</h3>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập tên shipper..." />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Khu vực hoạt động</label>
                    <input asp-for="Address" class="form-control" placeholder="Ví dụ: Quận 1, TP.HCM" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email đăng nhập</label>
                    <input asp-for="Email" class="form-control bg-light" readonly />
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}