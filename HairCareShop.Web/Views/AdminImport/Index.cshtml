@model IEnumerable<HairCareShop.Core.Entities.ImportNote>

@{
    ViewData["Title"] = "Lịch sử nhập kho";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-primary fw-bold m-0"><i class="bi bi-clock-history me-2"></i>Lịch sử Nhập kho</h3>
            <p class="text-muted small m-0">Quản lý toàn bộ phiếu nhập hàng từ nhà cung cấp</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-1"></i> Tạo phiếu nhập mới
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4">Mã Phiếu</th>
                            <th>Ngày nhập</th>
                            <th>Nhà cung cấp</th>
                            <th>Ghi chú</th>
                            <th class="text-end">Tổng tiền</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span
                                        class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">
                                        #@item.Id
                                    </span>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.ImportDate.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@item.ImportDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Supplier?.Name</div>
                                    <small class="text-muted">SĐT: @(item.Supplier?.PhoneNumber ?? "---")</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Note))
                                    {
                                        <span class="text-muted fst-italic"
                                            style="max-width: 200px; display: inline-block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            @item.Note
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">---</span>
                                    }
                                </td>
                                <td class="text-end fw-bold text-success fs-5">
                                    @item.TotalAmount.ToString("N0") đ
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"
                                        title="Xem chi tiết">
                                        <i class="bi bi-eye-fill"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox display-1 opacity-25"></i>
                                        <p class="mt-3">Chưa có phiếu nhập hàng nào.</p>
                                        <a asp-action="Create" class="btn btn-primary btn-sm">Nhập hàng ngay</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>